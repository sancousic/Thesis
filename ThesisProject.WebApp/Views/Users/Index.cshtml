@{ 
    ViewData["Title"] = "Users";
    var path = Context.Request.Path;
    var query = Context.Request.QueryString;
    var currentUrl = path + query;
}
<div id="modal-placeholder"></div>

<div class="row mb-2">
    <div class="col">
        Users
    </div>
    <div class="col d-flex align-items-center justify-content-end">
        <a type="button" class="btn btn-primary" asp-action="Create" asp-route-returnUrl="@currentUrl">Create user</a>
        <button id="backBtn" type="button" class="btn btn-primary">Back</button>
    </div>
</div>

<div class="row">
    <div class="col">
        <table id="users-table" class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Email</th>
                    <th scope="col">Name</th>
                    <th scope="col">Surname</th>
                    <th scope="col">Lastname</th>
                    <th scope="col">Role</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/Users/Index.js"></script>
    <script type="text/javascript">
        returnUrl = "@currentUrl"
    </script>
}