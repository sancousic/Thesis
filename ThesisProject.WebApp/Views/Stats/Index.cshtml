@{
    ViewData["Title"] = "Статистика";
    var path = Context.Request.Path;
    var query = Context.Request.QueryString;
    var currentUrl = path + query;
}

<div class="row mb-2">
    <div class="col-md-6">
        <div class="card mb-1">
            <div class="card-body">
                <h5 class="card-title">Сатистика заболеванией</h5>
                <a class="btn btn-primary stretched-link" asp-controller="Stats" asp-action="DiagnoseStats"
                   asp-route-returnUrl="@currentUrl">Перейти</a>
            </div>
        </div>
    </div>
</div>