@model IEnumerable<Vaccination>
@{ 
    ViewData["Title"] = "Вакцинации";
}


<div>
    <h4>
        Вакцинации
        <a class="btn btn-primary float-right" asp-action="AddVaccination">Добавить</a>
        <a class="btn btn-primary float-right mr-1" asp-action="Index">Назад</a>
    </h4>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Тип</th>
            <th>Дата</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vaccine in Model)
        {
            <tr>
                <td>@vaccine.Type</td>
                <td>@vaccine.Date</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@vaccine.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>