@using ThesisProject.WebApp.Models.Pacients
@model PacientIndexViewModel
@{
    ViewData["Title"] = "Home";
    var path = Context.Request.Path;
    var query = Context.Request.QueryString;
    var currentUrl = path + query;
}

<form asp-action="Index" method="post">
    <div class="form-group row">
        <div class="col-6">
            <label asp-for="@Model.Search.Name"></label>
            <input asp-for="@Model.Search.Name." class="form-control mr-sm-2" type="text" placeholder="Имя" aria-label="Имя" />
        </div>
        <div class="col-6">
            <label asp-for="@Model.Search.Address"></label>
            <input asp-for="@Model.Search.Address." class="form-control mr-sm-2" type="text" placeholder="Имя" aria-label="Имя" />
        </div>
        <div class="col-6">
            <label asp-for="@Model.Search.CardNumber"></label>
            <input asp-for="@Model.Search.CardNumber." class="form-control mr-sm-2" type="text" placeholder="Имя" aria-label="Имя" />
        </div>
        <div class="col d-flex align-self-end justify-content-end">
            <input type="submit" class="btn btn-outline-primary" value="Search" />
        </div>
    </div>
</form>


@if (Model.Pacients.Count() > 0)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Отчество</th>
                <th>Телефон</th>
                <th>Почта</th>
                <th>Номер карты</th>
                <th>Адресс</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pacient in Model.Pacients)
            {
                <tr>
                    <td>@pacient.Name1</td>
                    <td>@pacient.Name2</td>
                    <td>@pacient.Name3</td>
                    <td>@pacient.PhoneNumber</td>
                    <td>@pacient.Email</td>
                    <td>@pacient?.Card?.Number</td>
                    <td>ул. @pacient?.Address?.Street д. @pacient?.Address?.HomeNumber кв. @pacient?.Address?.ApartmentNumber</td>
                </tr>
                <tr>
                    <td colspan="8">
                        <div class="btn-group">
                            <a class="btn btn-primary" asp-action="Info" asp-route-id="@pacient.Id" 
                               asp-all-route-returnUrl="@currentUrl">Детальная информация</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@pacient.Id">Изменить</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@pacient.Id">Удалить</a>
                            }
                            @if (User.IsInRole("Doctor") || User.IsInRole("Admin"))
                            {
                                <a class="btn btn-primary" asp-controller="Card" asp-action="Index"
                                   asp-route-id="@pacient.Id" asp-route-returnUrl="@currentUrl">Карточка</a>
                                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@pacient.Id"
                                   asp-route-returnUrl="@currentUrl">Талоны</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center">
        <br />
        <h4>Пациенты с такими параметрами не найдены</h4>
    </div>
}



<page-link-tag-halper page-view-model="Model.PageViewModel" page-action="Index" page-pacient-search="Model.Searh"></page-link-tag-halper>