@using ThesisProject.WebApp.Models.Card
@model AddAlergyViewModel
@{
    ViewData["Title"] = "Добавить алергию";
    var path = Context.Request.Path;
    var query = Context.Request.QueryString;
    var currentUrl = path + query;
}


<h4>Добавить аллергию</h4>
<form asp-action="AddAllergy" method="post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="@Model.ReturnUrl" />
    <input type="hidden" asp-for="@Model.PacientId" />
    <input type="hidden" asp-for="@Model.CardId" />
    <div class="form-group">
        <label asp-for="@Model.Allergy.Type"></label>
        <input asp-for="@Model.Allergy.Type" class="form-control" />
        <span asp-validation-for="@Model.Allergy.Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Добавть</button>
        <a class="btn btn-primary" href="@Model.ReturnUrl">Отменить</a>
    </div>
</form>