@using ThesisProject.WebApp.Models.Card
@model AddVaccianationViewModel
@{
    ViewData["Title"] = "Добавить вакцину";
    var path = Context.Request.Path;
    var query = Context.Request.QueryString;
    var currentUrl = path + query;
}


<h4>Добавить вакцину</h4>
<form asp-action="AddVaccine" method="post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="@Model.ReturnUrl" />
    <input type="hidden" asp-for="@Model.PacientId" />
    <div class="form-group">
        <label asp-for="@Model.Vaccination"></label>
        <select asp-for="@Model.Vaccination" class="form-control">
            <option selected disabled>Выберите вакцину</option>
            @foreach (var vac in Model.Vaccinations)
            {
                <option value="@vac.Id">@vac.Type</option>
            }
        </select>
        <span asp-validation-for="@Model.Vaccination" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Date"></label>
        <input asp-for="@Model.Date" class="form-control" />
        <span asp-validation-for="@Model.Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Result"></label>
        <input asp-for="@Model.Result" class="form-control" />
        <span asp-validation-for="@Model.Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Добавть</button>
        <a class="btn btn-primary" href="@Model.ReturnUrl">Отменить</a>
    </div>
</form>